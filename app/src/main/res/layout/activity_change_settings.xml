<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lh.henu.edu.cn.locationattendance.activity.RegisterActivity">
    <RelativeLayout
        android:id="@+id/change_titleHead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorPrimary">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="修改资料"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/change_imageButton"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_toolbar_face"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/change_realName_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/change_realName_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:inputType="text"
            android:hint="请输入昵称"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/change_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:text="修改昵称"
        android:textSize="18dp"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/change_settings_exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:text="退出系统"
        android:textSize="18dp"/>

</LinearLayout>
