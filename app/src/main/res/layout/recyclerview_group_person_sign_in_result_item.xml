<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recyclerview_group_person_sign_in_result_item_head_image_imageview"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_toolbar_face"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recyclerview_group_person_sign_in_result_item_real_name_textview"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="昵称"/>
            <TextView
                android:id="@+id/recyclerview_group_person_sign_in_result_item_sign_in_result_textview"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="签到成功"/>

        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.6"
        android:background="@android:color/darker_gray"
        />
</LinearLayout>